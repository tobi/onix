#!/usr/bin/env bash
set -euo pipefail

# Run forem smoke test inside its nix devshell.
#
# Usage:
#   tests/forem/run-tests

dir="$(cd "$(dirname "$0")" && pwd)"
app_dir="$HOME/src/ruby-tests/forem"

cd "$app_dir"
rm -rf tmp/cache/bootsnap 2>/dev/null || true

exec nix-shell "$dir/devshell.nix" --run "
  bin/rails --help >/dev/null
  echo 'forem: rails boot OK'
"
