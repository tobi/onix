#!/usr/bin/env bash
set -euo pipefail

dir="$(cd "$(dirname "$0")" && pwd)"
app_dir="/tmp/onix-tests/solidus"

if [ ! -d "$app_dir" ]; then
  echo "Cloning solidus to $app_dir..."
  git clone --depth 1 https://github.com/solidusio/solidus.git "$app_dir"
fi

cd "$app_dir"
rm -rf tmp/cache/bootsnap 2>/dev/null || true

exec nix-shell "$dir/devshell.nix" --run "
  bin/rails --help >/dev/null
  echo 'solidus: rails boot OK'
"
