#!/usr/bin/env bash
set -euo pipefail

dir="$(cd "$(dirname "$0")" && pwd)"
app_dir="/tmp/onix-tests/discourse"

if [ ! -d "$app_dir" ]; then
  echo "Cloning discourse to $app_dir..."
  git clone --depth 1 https://github.com/discourse/discourse.git "$app_dir"
fi

cd "$app_dir"
rm -rf tmp/cache/bootsnap 2>/dev/null || true

exec nix-shell "$dir/devshell.nix" --run "
  SKIP_DB_AND_REDIS=1 DISCOURSE_DEV_DB=nonexist bin/rails runner 'puts(1 + 1)'
  echo 'discourse: rails runner OK'
"
